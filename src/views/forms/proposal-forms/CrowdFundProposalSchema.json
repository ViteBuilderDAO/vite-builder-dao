[
  {
    "label": "Proposal Title",
    "name": "title",
    "validation": "required"
  },
  {
    "label": "Proposal URL",
    "name": "url",
    "validation": "required"
  },
  {
    "label": "Proposal Keywords",
    "name": "keywords",
    "validation": "required"
  },
  {
    "type": "textarea",
    "v-model": "description",
    "label": "Description"
  },
  {
    "type": "group",
    "name": "social_accounts",
    "validation": "min:2,length",
    "repeatable": true,
    "add-label": "+ Add platform",
    "value": [{}],
    "children": [
      {
        "type": "select",
        "name": "social_platform",
        "label": "Social Platform",
        "placeholder": "Select one",
        "options": {
          "twitter": "Twitter",
          "facebook": "Facebook",
          "instagram": "Instagram",
          "linkedin": "LinkedIn"
        }
      },
      {
        "type": "text",
        "name": "social_url",
        "label": "Profile URL",
        "validation": "required|url"
      }
    ]
  },
  {
    "type": "file",
    "name": "attached_files",
    "label": "Select your documents to upload",
    "help": "Select one or more files to upload",
    "multiple": true
  },
  {
    "type": "submit",
    ":disabled": "!walletConnected"
  }
]