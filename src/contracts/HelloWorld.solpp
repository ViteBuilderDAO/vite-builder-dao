pragma soliditypp ^0.4.3;

contract HelloWorld {
    event MyLog(address indexed addr, string log);

    onMessage sayHello(address dest) payable {
        dest.transfer(msg.tokenid, msg.amount);
        emit MyLog(dest, "Hello! Have some Vite!");
    }
}


// Random solpp notes:

// If deploying a contract with amount > 0, the contract constructor must be payable or the contract 
// will not deploy successfully.